<Window x:Class="DCP_Accounts2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Expenditure Head Form" Height="450" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0D2F23" CornerRadius="0,0,20,20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="DCP" Foreground="LimeGreen" FontSize="36" FontWeight="Bold"/>
                <TextBlock Text="Digital Creation Plan" Foreground="White" FontSize="18" FontStyle="Italic"/>
                <TextBlock Text="Expenditure Head Form" Foreground="White" FontSize="24" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Form Section -->
        <StackPanel Grid.Row="1" Margin="30,20,30,20">
            <StackPanel Orientation="Horizontal" Margin="0,8">
                <Label Content="ExpCode:" Width="120" FontWeight="Bold" Foreground="DarkBlue"/>
                <TextBox x:Name="txtExpCode" Width="280" Height="32" Background="#E6F2FF"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,8">
                <Label Content="ExpDetails:" Width="120" FontWeight="Bold" Foreground="DarkGreen"/>
                <TextBox x:Name="txtExpDetails" Width="280" Height="32" Background="#E9FFE6"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,8">
                <Label Content="UserID:" Width="120" FontWeight="Bold" Foreground="DarkRed"/>
                <TextBox x:Name="txtUserID" Width="280" Height="32" Background="#FFE6E6"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,8">
                <Label Content="EntryDate:" Width="120" FontWeight="Bold" Foreground="Purple"/>
                <DatePicker x:Name="dpEntryDate" Width="280" Height="32" Background="#FFF0F5" IsHitTestVisible="False" SelectedDate="{x:Static sys:DateTime.Now}"/>
            </StackPanel>

            <Button Content="💾 Save" Width="140" Height="40" Margin="0,15,0,0" HorizontalAlignment="Left" Click="Save_Click" Background="DarkCyan" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>

            <DataGrid x:Name="dgData" AutoGenerateColumns="True" Margin="0,20,0,0" Height="180" AlternatingRowBackground="#E6F7FF" RowBackground="White" GridLinesVisibility="Horizontal" BorderBrush="LightGray" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
