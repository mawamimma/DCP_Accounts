<Window x:Class="DCP_Accounts5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DCP Expenditure Entry" Height="500" Width="400"
        Background="#E6F0FA" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <!-- Header -->
        <Border Background="#007ACC" Height="90" VerticalAlignment="Top" CornerRadius="10" Padding="10">
            <StackPanel>
                <TextBlock Text="DCP" FontSize="22" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Digital Creation Form" FontSize="16" Foreground="White"/>
                <TextBlock Text="Expenditure Entry" FontSize="16" Foreground="White"/>
            </StackPanel>
        </Border>

        <StackPanel Margin="0,110,0,0">
            <TextBlock Text="Expense Code" FontWeight="Bold" Margin="0,5,0,0"/>
            <ComboBox Name="cmbExpCode" Height="30" Background="WhiteSmoke" Margin="0,0,0,10"/>

            <TextBlock Text="Expense Details" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBox Name="txtExpDetails" Height="30" Background="WhiteSmoke" Margin="0,0,0,10"/>

            <TextBlock Text="User ID" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBox Name="txtUserID" Height="30" Background="WhiteSmoke" Margin="0,0,0,10"/>

            <TextBlock Text="Expense Date" FontWeight="Bold" Margin="0,5,0,0"/>
            <DatePicker Name="dpExpDate" Height="30" Background="WhiteSmoke" Margin="0,0,0,10"/>

            <TextBlock Text="Entry Date" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBox Name="txtEntryDate" Height="30" Background="WhiteSmoke" Margin="0,0,0,10" IsReadOnly="True"/>

            <Button Content="Save" Height="35" Background="#007ACC" Foreground="White"
                    FontWeight="Bold" Click="BtnSave_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
