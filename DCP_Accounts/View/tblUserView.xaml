<Window x:Class="DCP_Accounts.View.tblUserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCP_Accounts.View"
        mc:Ignorable="d"
        Title="tblUserView" Height="450" Width="800">
    <Grid Background="#FFE9DCDC" Margin="0,2,0,-2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="667*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border BorderBrush="#FF2E2525" BorderThickness="1"
                HorizontalAlignment="Left" Height="142" 
                Margin="10,-37,0,0" VerticalAlignment="Top"
                Width="776" CornerRadius="20"
                Background="#FFD1ACAC" Grid.ColumnSpan="2" Grid.Column="1">
            <Image Margin="646,41,30,41" Source="/image.png" Stretch="Fill"/>
        </Border>

        <TextBlock HorizontalAlignment="Left" Height="44" Margin="25,28,0,0"
                   Text="User Table" VerticalAlignment="Top"
                   Width="350" Foreground="#FFF5CF07" FontSize="40" FontWeight="Bold"
                   Grid.ColumnSpan="2" Grid.Column="1"/>

        <TextBlock HorizontalAlignment="Left" Height="44" Margin="22,-10,0,0"
                   Text="Digital Creation Plan LLC" VerticalAlignment="Top"
                   Width="490" Foreground="#FF0F0466" FontSize="30" FontWeight="Bold"
                   Grid.ColumnSpan="2" Grid.Column="1"/>

        <!-- Labels -->
        <TextBlock Grid.Column="2" Margin="60,124,487,0" Text="UID" Width="120"
                   FontWeight="Bold" FontSize="20" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="2" Margin="55,174,492,0" Text="Password" Width="120"
                   FontWeight="Bold" FontSize="20" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="2" Margin="55,227,426,0" Text="Phone"
                   FontWeight="Bold" FontSize="20" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="2" Margin="55,284,466,0" Text="Email"
                   FontWeight="Bold" FontSize="20" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="2" Margin="54,335,493,0" Text="EmpID" Width="120"
                   FontWeight="Bold" FontSize="20" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="2" Margin="50,386,433,0" Text="EntryBy"
                   FontWeight="Bold" FontSize="20" VerticalAlignment="Top"/>

        <!-- Inputs -->
        <TextBox Grid.Column="2" Margin="216,120,0,0" Width="225" Height="35"
                 Background="#FFD6E8FF" x:Name="txtUID"
                 VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <PasswordBox Grid.Column="2" Margin="216,174,0,0" Width="225" Height="35"
                     Background="#FFD6E8FF" x:Name="txtPassword"
                     VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <TextBox Grid.Column="2" Margin="216,227,0,0" Width="225" Height="35"
                 Background="#FFD6E8FF" x:Name="txtPhone"
                 VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <TextBox Grid.Column="2" Margin="216,280,0,0" Width="225" Height="35"
                 Background="#FFD6E8FF" x:Name="txtEmail"
                 VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <TextBox Grid.Column="2" Margin="216,333,0,0" Width="225" Height="35"
                 Background="#FFD6E8FF" x:Name="txtEmpID"
                 VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <TextBox Grid.Column="2" Margin="216,386,0,0" Width="225" Height="35"
                 Background="#FFD6E8FF" x:Name="txtEntryBy"
                 VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <!-- Save Button -->
        <Button Content="Save"
                Command="{Binding SaveCommand}"
                Grid.Column="2"
                HorizontalAlignment="Left"
                Margin="259,440,0,0"
                VerticalAlignment="Top"
                Width="120" Height="32" FontSize="20" FontWeight="Bold"
                Background="#FFD6E8FF"/>
    </Grid>
</Window>
