<Window x:Class="DCP_Accounts.View.tblIncomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCP_Accounts.View"
        mc:Ignorable="d"
        Title="tblIncomeView" Height="450" Width="800">
    <Grid Background="#FFDDA6A6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="667*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="#FF2E2525" BorderThickness="1" HorizontalAlignment="Left" Height="142" Margin="10,-37,0,0" VerticalAlignment="Top" Width="776" CornerRadius="20,20,20,20" Background="#FFED6C6C" Grid.ColumnSpan="2" Grid.Column="1">
            <Image Margin="646,41,30,41" Source="/image.png" Stretch="Fill"/>
        </Border>
        <TextBlock HorizontalAlignment="Left" Height="44" Margin="25,28,0,0" TextWrapping="Wrap" Text="Income Table" VerticalAlignment="Top" Width="284" Foreground="#FFF5CF07" FontSize="40" FontWeight="Bold" Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Height="44" Margin="22,-10,0,0" TextWrapping="Wrap" Text="Digital Creation Plan LLC" VerticalAlignment="Top" Width="490" Foreground="#FF0F0466" FontSize="30" FontWeight="Bold" Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBlock Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="40" Margin="48,149,0,0" TextWrapping="Wrap" Text="ExpenditurID" VerticalAlignment="Top" Width="129" FontWeight="Bold" FontSize="20"/>
        <TextBlock Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="40" Margin="50,202,0,0" TextWrapping="Wrap" Text="IncDetail" VerticalAlignment="Top" Width="97" FontSize="20" FontWeight="Bold"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="51,255,0,0" TextWrapping="Wrap" Text="IncDate" VerticalAlignment="Top" Width="86" RenderTransformOrigin="0.719,0.568" Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="50,308,0,0" TextWrapping="Wrap" Text="UID" VerticalAlignment="Top" Width="69" FontSize="20" FontWeight="Bold"/>
        <TextBlock Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="40" Margin="52,355,0,0" TextWrapping="Wrap" Text="EntryDate" VerticalAlignment="Top" Width="103" FontSize="20" FontWeight="Bold"/>
        <TextBox Grid.Column="2" Height="35" Margin="54,148,0,20" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="225" HorizontalAlignment="Left" Background="#FFD6E8FF"/>
        <TextBox Grid.Column="2" Height="35" Margin="55,202,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="225" HorizontalAlignment="Left" Background="#FFD6E8FF"/>
        <TextBox Grid.Column="2" Height="35" Margin="56,255,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="225" HorizontalAlignment="Left" Background="#FFD6E8FF"/>
        <TextBox Grid.Column="2" Height="35" Margin="56,307,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="225" HorizontalAlignment="Left" TextChanged="TextBox_TextChanged_1" Background="#FFD6E8FF"/>
        <DatePicker Grid.Column="2" Margin="58,357,0,0" VerticalAlignment="Top" Width="225" HorizontalAlignment="Left" Height="35" RenderTransformOrigin="1.784,-2.224" Background="White">
            <DatePicker.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                    <GradientStop Color="#FFA3AEB9"/>
                    <GradientStop Color="#FF8399A9" Offset="0.375"/>
                    <GradientStop Color="#FF718597" Offset="0.375"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </DatePicker.BorderBrush>
        </DatePicker>
    </Grid>
</Window>
