<Window x:Class="DCP_Accounts.View.tblExpBubView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCP_Accounts.View"
        mc:Ignorable="d"
        Title="tblExpBubView" Height="450" Width="800">
    <Grid Background="#FFE9DCDC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="667*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border BorderBrush="#FF2E2525" BorderThickness="1"
                HorizontalAlignment="Left" Height="142" 
                Margin="10,-37,0,0" VerticalAlignment="Top"
                Width="776" CornerRadius="20"
                Background="#FFD1ACAC" Grid.ColumnSpan="2" Grid.Column="1">
            <Image Margin="646,41,30,41" Source="/image.png" Stretch="Fill"/>
        </Border>

        <TextBlock HorizontalAlignment="Left" Height="44" Margin="25,28,0,0"
                   Text="Expenditure Sub Table" VerticalAlignment="Top"
                   Width="420" Foreground="#FFF5CF07" FontSize="40" FontWeight="Bold"
                   Grid.ColumnSpan="2" Grid.Column="1"/>

        <TextBlock HorizontalAlignment="Left" Height="44" Margin="22,-10,0,0"
                   Text="Digital Creation Plan LLC" VerticalAlignment="Top"
                   Width="490" Foreground="#FF0F0466" FontSize="30" FontWeight="Bold"
                   Grid.ColumnSpan="2" Grid.Column="1"/>

        <!-- Labels -->
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Height="40" Margin="79,121,0,0"
                   Text="ExpSubCode" VerticalAlignment="Top" Width="140" FontWeight="Bold" FontSize="20"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Height="40" Margin="81,174,0,0"
                   Text="ExpDetail" VerticalAlignment="Top" Width="140" FontWeight="Bold" FontSize="20"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Height="40" Margin="82,227,0,0"
                   Text="ExpCode" VerticalAlignment="Top" Width="140" FontWeight="Bold" FontSize="20"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Height="40" Margin="83,280,0,0"
                   Text="UID" VerticalAlignment="Top" Width="140" FontWeight="Bold" FontSize="20"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Height="40" Margin="83,333,0,0"
                   Text="EntryDate" VerticalAlignment="Top" Width="140" FontWeight="Bold" FontSize="20"/>

        <!-- Inputs -->
        <TextBox Grid.Column="2" Height="35" Margin="216,120,0,0"
                 VerticalAlignment="Top" Width="225"
                 HorizontalAlignment="Left" Background="#FFD6E8FF"
                 x:Name="txtExpSubCode"/>

        <TextBox Grid.Column="2" Height="35" Margin="217,174,0,0"
                 VerticalAlignment="Top" Width="225"
                 HorizontalAlignment="Left" Background="#FFD6E8FF"
                 x:Name="txtExpDetail"/>

        <TextBox Grid.Column="2" Height="35" Margin="218,227,0,0"
                 VerticalAlignment="Top" Width="225"
                 HorizontalAlignment="Left" Background="#FFD6E8FF"
                 x:Name="txtExpCode"/>

        <TextBox Grid.Column="2" Height="35" Margin="218,280,0,0"
                 VerticalAlignment="Top" Width="225"
                 HorizontalAlignment="Left" Background="#FFD6E8FF"
                 x:Name="txtUID"/>

        <DatePicker Grid.Column="2" Margin="218,333,0,0"
                    VerticalAlignment="Top" Width="225" HorizontalAlignment="Left"
                    Height="35" Background="#FFFBFBFB"
                    x:Name="dpEntryDate">
            <DatePicker.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                    <GradientStop Color="#FFA3AEB9"/>
                    <GradientStop Color="#FF8399A9" Offset="0.375"/>
                    <GradientStop Color="#FF718597" Offset="0.375"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </DatePicker.BorderBrush>
        </DatePicker>

        <!-- Save Button -->
        <Button Content="Save"
                Command="{Binding SaveCommand}"
                Grid.Column="2"
                HorizontalAlignment="Left"
                Margin="259,390,0,0"
                VerticalAlignment="Top"
                Width="120" Height="32" FontSize="20" FontWeight="Bold"
                Background="#FFD6E8FF"/>
    </Grid>
</Window>
